<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:id="@+id/entryimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Change Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChange"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_above="@+id/edtName"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Name"
        android:layout_above="@+id/edtDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />


    <ImageButton
        android:id="@+id/addLocationIBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="@color/colorAccent"
        android:onClick="addLocation"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:layout_above="@+id/LocationeditText"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/addDateIBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addLocationIBtn"
        android:layout_toEndOf="@+id/entryimage"
        android:background="@color/colorAccent"
        android:onClick="addDate"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <TextView
        android:id="@+id/LocationeditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_toStartOf="@+id/addDateIBtn"
        android:ems="10"
        android:inputType="none"
        android:text="Ort"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/DateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LocationeditText"
        android:layout_alignBottom="@+id/LocationeditText"
        android:layout_toEndOf="@+id/LocationeditText"
        android:ems="10"
        android:inputType="date"
        android:textSize="18sp" />


</RelativeLayout>